                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:text="@string/expiry_default"
                    android:textAlignment="textEnd" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

